<h1>Listing documents</h1>

<table>
  <tr>
	<th>Thumb</th>
    <th>Title</th>
    <th>Description</th>
	<th>File size</th>
	<th>Content type</th>
    <th>Project</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
	<td><%= image_tag document.document.url(:thumb) %></td>
    <td><%=h document.title %></td>
    <td><%=h document.description %></td>
	<td><%=h number_to_human_size(document.document_file_size) %></td>
	<td><%=h document.document_content_type %></td>
    <td><%=h document.project.name %></td>
    <td><%= link_to 'Show', [@project,document] %></td>
    <td><%= link_to 'Edit', edit_project_document_path(@project,document) %></td>
    <td><%= link_to 'Destroy', [@project,document], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_project_document_path(@project) %>