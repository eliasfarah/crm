<% form_for(@contract) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, Contract::STATUS %>
  </p>
  <p>
    <%= f.label :started_at %><br />
    <%= f.datetime_select :started_at %>
  </p>
  <p>
    <%= f.label :ended_at %><br />
    <%= f.datetime_select :ended_at %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :leader_id %><br />
    <%= f.collection_select :leader_id, @users, :id, :name %>
  </p>
  <p>
    <%= f.label :project_id %><br />
    <%= f.collection_select :project_id, @projects, :id, :name %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>